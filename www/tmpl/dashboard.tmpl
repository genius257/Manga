<div>
    <div id="update" style="cursor:pointer;border:1px solid #000;padding: 5px 10px; display:inline-block;">
        Check all mangas for updates
    </div>
</div>
<div class="hub">
    <div class="hubHeader">
        <span class="hubTitle">Continue Reading</span>
        <div class="hubAction">
            <button class="hubSrollButton">
                <span class="material-icons">
                    chevron_left
                </span>
            </button>
            <button class="hubSrollButton forward">
                <span class="material-icons">
                    chevron_right
                </span>
            </button>
        </div>
    </div>
    <div style="display: flex;flex-direction: row;gap: 15px;transition: margin 0.5s ease 0s;">
        <% for (let index = 0; index < mangas.length; index++) { %>
            <%=tmpl('poster', {image: '/data/'+mangas[index].pathId+'/'+mangas[index].poster, link: "/read.au3?manga="+mangas[index].id, title: mangas[index].name, title2: mangas[index].api})%>
        <% } %>
    </div>
</div>
